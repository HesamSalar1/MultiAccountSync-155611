# متغیرهای محیط برای StackHost - Environment Variables for StackHost
# کپی این فایل به .env و تنظیمات را ویرایش کنید
# Copy this file to .env and edit the settings

# =============================================================================
# تنظیمات پایه سیستم - Basic System Settings
# =============================================================================
BOT_MODE=production
DEBUG=false
LOG_LEVEL=INFO
TOTAL_BOTS=9
RESTART_DELAY=10
MAX_RESTART_ATTEMPTS=5

# =============================================================================
# تنظیمات وب پنل - Web Panel Settings
# =============================================================================
WEB_PORT=5000
WEB_HOST=0.0.0.0
SECRET_KEY=your_super_secret_key_here_change_this
SESSION_TIMEOUT=3600

# =============================================================================
# تنظیمات دیتابیس PostgreSQL - PostgreSQL Database Settings
# =============================================================================
DB_PASSWORD=secure_password_change_this
DATABASE_URL=postgresql://telegram_user:secure_password_change_this@postgres:5432/telegram_bots

# =============================================================================
# تنظیمات Redis - Redis Settings
# =============================================================================
REDIS_PASSWORD=redis_secure_password_change_this
REDIS_URL=redis://:redis_secure_password_change_this@redis:6379/0

# =============================================================================
# تنظیمات امنیتی اصلی - Main Security Settings
# =============================================================================
